<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="menu">
        <menuText name="menutitle">
            <fontPath>./_inc/fonts/Roboto-Bold.ttf</fontPath>
            <fontSize>0.04</fontSize>
            <color>ffffff</color>
        </menuText>
        <menuText name="menufooter">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
            <fontSize>0.023</fontSize>
            <color>868686</color>
        </menuText>
        <menuText name="menutext">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
            <fontSize>0.029</fontSize>
            <color>868686</color>
            <separatorColor>191919</separatorColor>
            <selectorColor>9f0043</selectorColor>
            <selectorColorEnd>9f0043</selectorColorEnd>
            <selectedColor>FFFFFF</selectedColor>
            <selectorGradientType>horizontal</selectorGradientType>
        </menuText>
        <menuTextSmall name="menutextsmall">
            <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
            <fontSize>0.020</fontSize>
            <color>FFFFFF</color>
        </menuTextSmall>
        <menuBackground name="menubg">
            <color>333333</color>
            <cornerSize>32 32</cornerSize>
            <path>./_inc/frame.webp</path>
        </menuBackground>
        <menuIcons name="menuicons">
            <iconKodi>./_inc/icons/Kodi.webp</iconKodi>
            <iconSystem>./_inc/icons/System.webp</iconSystem>
            <iconUpdates>./_inc/icons/Updates.webp</iconUpdates>
            <iconGames>./_inc/icons/Games.webp</iconGames>
            <iconControllers>./_inc/icons/Controllers.webp</iconControllers>
            <iconUI>./_inc/icons/UI.webp</iconUI>
            <iconSound>./_inc/icons/Sound.webp</iconSound>
            <iconNetwork>./_inc/icons/Network.webp</iconNetwork>
            <iconScraper>./_inc/icons/Scraper.webp</iconScraper>
            <iconAdvanced>./_inc/icons/Advanced.webp</iconAdvanced>
            <iconQuit>./_inc/icons/Quit.webp</iconQuit>
            <iconRestart>./_inc/icons/Restart.webp</iconRestart>
            <iconShutdown>./_inc/icons/Shutdown.webp</iconShutdown>
            <iconFastShutdown>./_inc/icons/Fastshutdown.webp</iconFastShutdown>
            <iconRetroachievements>./_inc/icons/Contest.webp</iconRetroachievements>
            <iconEmuelec>./_inc/icons/Emuelec.webp</iconEmuelec>
        </menuIcons>
        <menuTextEdit name="menutextedit">
            <inactive>./_inc/textinput_text.webp</inactive>
            <active>./_inc/textinput_text_active.webp</active>
        </menuTextEdit>

        <helpsystem name="help">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
            <fontSize>0.022</fontSize>
            <pos>0.06 0.955</pos>
            <textColor>FFFFFF</textColor>
        </helpsystem>
    </view>

</theme>