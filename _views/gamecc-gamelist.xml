<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="gamecarousel" tinyScreen="false" displayName="gamecc GAMELIST">
        <gamecarousel name="gamecarousel">
            <type>horizontal</type>
            <origin>0 0.5</origin>
            <pos>0.1 0.5</pos>
            <size>1.25 1</size>
            <backgroundColor>333333</backgroundColor>
            <logoScale>2.8</logoScale>
            <logoSize>0.05 0.40</logoSize>
            <maxLogoCount>18</maxLogoCount>
            <logoRotation>0</logoRotation>
            <logoRotationOrigin>1 1</logoRotationOrigin>
            <logoAlignment>center</logoAlignment>
            <imageSource>thumbnail</imageSource>
            <zIndex>21</zIndex>
        </gamecarousel>

        <text name="gamecarouselLogoText">
            <color>FFFFFFFF</color>
            <glowColor>00000050</glowColor>
            <glowSize>3</glowSize>
            <glowOffset>3</glowOffset>
            <lineSpacing>1.0</lineSpacing>
            <fontPath>./_inc/fonts/LEMONMILK-Bold.otf</fontPath>
            <fontSize>0.040</fontSize>
        </text>

        <!-- Overlay -->
        <image name="overlay, overlay2" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./../_assets/overlay.webp</path>
            <zIndex>15</zIndex>
        </image>
        <image name="overlay2" extra="true">
            <path>./../_assets/overlay.webp</path>
        </image>

        <!-- Background Default -->
        <image name="background_default" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./../_assets/default.webp</path>
            <path>./../$system/assets/wall.webp</path>
            <zIndex>1</zIndex>
        </image>

        <!-- VÍDEO -->
        <!-- Vídeo Game Preview -->
        <video name="md_video">
            <origin>0 0.5</origin>
            <pos>0.105 0.5</pos>
            <size>0.34 0.45</size>
            <delay>2</delay>
            <effect>none</effect>
            <default>./../_assets/videos/video_default.mp4</default>
            <default>./../$system/assets/video_default.mp4</default>
            <snapshotSource>image</snapshotSource>
            <showSnapshotDelay>true</showSnapshotDelay>
            <zIndex>98</zIndex>
        </video>

        <!-- Vídeo Border -->
        <image name="md_video_border" extra="true">
            <origin>0 0.5</origin>
            <pos>0.1 0.5</pos>
            <path>./../_assets/border.webp</path>
            <path>./../$system/assets/border.webp</path>
            <zIndex>99</zIndex>
        </image>

        <!-- Vídeo Overlay -->
        <image name="md_video_overlay" extra="true">
            <origin>0 0.5</origin>
            <pos>0.105 0.5</pos>
            <size>0.34 0.45</size>
            <path>./../_assets/overlay_video.webp</path>
            <path>./../$system/assets/overlay_video.webp</path>
            <zIndex>98</zIndex>
        </image>

        <!-- Logo do Sistema -->
        <image name="logo">
            <origin>1 0.5</origin>
            <pos>1 0.05</pos>
            <size>0.15 </size>
            <scale>0.7</scale>
            <path>./_assets/logos/$system.webp</path>
            <zIndex>99</zIndex>
        </image>

        <!-- Informações -->
        <!-- Favorite -->
        <image name="md_favorite, no_favorite">
            <origin>0 0</origin>
            <pos>0.015 0.03</pos>
            <pos if="${screen.width} > 1920">0.015 0.03</pos>
            <path>./_assets/favorite.webp</path>
            <size>0.032 </size>
            <size if="${screen.width} > 1920">0.025 </size>
            <zIndex>99</zIndex>
        </image>
        <image name="no_favorite" extra="true">
            <path>./_assets/no-favorite.webp</path>
            <zIndex>98</zIndex>
        </image>

        <!-- Name -->
        <text name="md_name">
            <origin>0 0</origin>
            <pos>0 0.02</pos>
            <size>1 0</size>
            <fontPath>./_inc/fonts/LEMONMILK-Bold.otf</fontPath>
            <!-- <glowColor>00000020</glowColor>
                    <glowSize>1</glowSize>
                    <glowOffset>2</glowOffset> -->
            <fontSize>0.040</fontSize>
            <color>FFFFFF</color>
            <alignment>center</alignment>
            <zIndex>99</zIndex>
        </text>

        <!-- Rating Classificação do Game -->
        <rating name="md_rating">
            <origin>0.5 0</origin>
            <pos>0.97 0.095</pos>
            <size>1 0.03</size>
            <color>FFFFFF</color>
            <filledPath>./_inc/images/star_filled.svg</filledPath>
            <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
            <unfilledColor>FFFFFF</unfilledColor>
            <horizontalAlignment>center</horizontalAlignment>
            <zIndex>99</zIndex>
        </rating>

        <!-- Logo -->
        <image name="md_marquee">
            <origin>0 0.5</origin>
            <pos>0.05 0.07</pos>
            <minSize>0.1 0.1</minSize>
            <maxSize>0.1 0.1</maxSize>
            <horizontalAlignment>left</horizontalAlignment>
            <verticalAlignment>center</verticalAlignment>
            <zIndex>99</zIndex>
        </image>


        <!-- Informações do sistema - HIDE -->
        <image name="art, art2, art3" extra="true">
            <zIndex>0</zIndex>
        </image>

    </view>

</theme>