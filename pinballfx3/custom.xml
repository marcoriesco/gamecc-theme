<theme>
    <formatVersion>7</formatVersion>

    <customView name="gamecarousel">

        <gamecarousel name="gamecarousel">
            <pos>0.425 0.5</pos>
            <size>0.575 1</size>
        </gamecarousel>

        <!-- Fullcabinets -->
        <image name="md_boxart">
            <origin>0 0.5</origin>
            <pos>0.175 0.5</pos>
            <size>0.25 0.45</size>
            <zIndex>22</zIndex>
        </image>

        <!-- Video Preview -->
        <video name="md_video">
            <origin>0.5 0</origin>
            <pos>0.5 0.043</pos>
            <size>0.22 0.263</size>
            <size if="${screen.width} > 1920">0.167 0.263</size>
            <showSnapshotDelay>false</showSnapshotDelay>
            <zIndex>23</zIndex>
        </video>

        <!-- VÃ­deo Border -->
        <image name="md_video_border, md_video_overlay" extra="true">
            <zIndex>0</zIndex>
        </image>

    </customView>

</theme>