<theme>
    <formatVersion>7</formatVersion>

    <customView name="gamecarousel">

        <!-- Fullcabinet chihiro -->
        <image name="md_chihiro" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0</pos>
            <size>0 0</size>
            <scale>1.5</scale>
            <path>./../_assets/gamecc/chihiro.webp</path>>
            <zIndex>22</zIndex>
        </image>

        <!-- bg fullcabinet -->
        <text name="md_chihiro_bg_video" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.346</pos>
            <size>0.26 0.303</size>
            <size if="${screen.width} > 1920">0.195 0.303</size>
            <backgroundColor>000000</backgroundColor>
            <zIndex>21</zIndex>
        </text>

        <!-- Fullcabinets -->
        <image name="md_boxart">
            <origin>0.5 0</origin>
            <pos>0.5 0</pos>
            <size>0 0</size>
            <scale>1.5</scale>
            <!-- <zIndex>22</zIndex> -->
            <zIndex>0</zIndex>
        </image>
        <!-- Marquee -->
        <image name="md_boxback">
            <origin>0.5 0</origin>
            <pos>0.5 0.08</pos>
            <size>0.235 0.16</size>
            <zIndex>0</zIndex>
        </image>

        <!-- Video Preview -->
        <video name="md_video">
            <origin>0.5 0</origin>
            <pos>0.5 0.346</pos>
            <size>0.26 0.303</size>
            <size if="${screen.width} > 1920">0.195 0.303</size>
            <zIndex>21</zIndex>
        </video>

        <!-- Arcade Background VÃ­deo -->
        <video name="md_video_background" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./_assets/videos/arcade.mp4</path>
            <showSnapshotDelay>false</showSnapshotDelay>
            <delay>0</delay>
            <effect>none</effect>
            <zIndex>4</zIndex>
        </video>

    </customView>

</theme>
